mixin alert-success()
    - if (messages.success)
        .message.info
            div(id="alert" class="old-class")
                div(
                    show-alert
                    time="5000"
                    ) #{messages.success}
                div(class="x" exit) x

mixin alert-error()
    - if (messages.error)
        .message.info
            div(id="alert" class="old-class")
                div(
                    show-alert
                    time="5000"
                    ) #{messages.error}
                div(class="x" exit) x
