#chatbot-container
  #chatbot-button
    img(src="/images/imageai.png" alt="Chatbot Icon")

  #chatbox.hidden
    #chatbox-header
      span Chatbot
      button#close-chat ✖

    #chat_container
      .wrapper.ai
        .chat
          .profile
            img(src="/images/bot.svg" alt="bot")
          .message Xin chào, tôi có thể giúp gì cho bạn?

    form.formGpt
      textarea(name="prompt" rows="1" cols="1" placeholder="Mời bạn đặt câu hỏi...")
      button(type="submit")
        img(src="/images/send.svg" alt="send")
